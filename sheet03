(A)source code:
#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long n;
    cin >> n;
    long long sum = 0;

    for(int i = 1; i <= n; i++) 
    {
        long long a;
        cin >> a;
        sum = sum + a; 
    }

    cout << abs(sum) << endl; 
}


(B)Source code:
#include<bits/stdc++.h>
using namespace std;
int main()
{
    long long n,x;
    cin >> n;
    long long arr[n];
    for(int i = 0; i < n; i++)
    {
        cin>>arr[i];
    }
    cin>>x;
    bool flag=false;
    for(int j=0;j<n;j++)
    {
        if(arr[j]==x)
        {
            flag=true;
            cout<<j<<endl;
            break;
        }
    }
    if(!flag)
    {
        cout<<-1<<endl;
    }
}
